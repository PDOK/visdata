            "maxzoom": 20,
            "minzoom": 0,
            "paint": {
                "fill-color" : "#f1f2f3",
                "fill-outline-color": "#f1f2f3",
                "fill-opacity": {
                    "property": "lod1",
                    "type": "categorical",
                    "stops": [
                        ["country" , 1 ],
