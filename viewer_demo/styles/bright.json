                    "property": "lod1",
                    "type": "categorical",  
                    "stops": [
                        ["water_surface" , 1],
                        ["water_course", 1]
                    ]
                }
            }
        },
         {
            "id": "terrain",
            "type": "fill",
            "source": "wm_vector",
            "source-layer": "terrain",
            "maxzoom": 20,
            "minzoom": 0,
            "paint": {
                "fill-color" : {
                    "property": "lod2",
                    "type": "categorical",
                    "stops": [
                        ["open", "#f7f4f9"],
                        ["low_vegetation", "#e7e1ef"],
